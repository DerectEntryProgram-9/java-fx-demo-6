      <Button fx:id="btnDeleteCustomer" layoutX="246.0" layoutY="142.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="127.0" style="-fx-background-color: #FF2119; -fx-text-fill: white;" text="Delete Customer" />
