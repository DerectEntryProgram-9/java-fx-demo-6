   <children>
      <TableView fx:id="tblCustomers" layoutX="42.0" layoutY="278.0" prefHeight="200.0" prefWidth="517.0">
         <columns>
            <TableColumn prefWidth="75.0" text="ID" />
            <TableColumn prefWidth="75.0" text="Name" />
            <TableColumn prefWidth="75.0" text="Address" />
         </columns>
      </TableView>
      <VBox layoutX="42.0" layoutY="76.0" spacing="10.0">
         <children>
            <Label text="Customer ID" />
            <TextField fx:id="txtId" promptText="Ex: C001" />
            <Label text="Customer Name" />
            <TextField fx:id="txtName" promptText="Ex: Hiran" />
            <Label text="Customer Address" />
            <TextField fx:id="txtAddress" promptText="Ex: Panadura" />
         </children>
      </VBox>
      <Button fx:id="btnSaveCustomer" layoutX="246.0" layoutY="102.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="127.0" style="-fx-background-color: blue; -fx-text-fill: white;" text="Save Customer" />
